<Window x:Class="EventCounterProofOfConcept.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventCounterProofOfConcept"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
	<Window.Resources>
		<local:VM_Main x:Key="vmMain"/>
	</Window.Resources>
	<DockPanel LastChildFill="True" DataContext="{StaticResource ResourceKey=vmMain}">
		<Grid DockPanel.Dock="Top" Height="122">
			<Button Content="Uruchom dziada" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Button_Click"/>
			<CheckBox Content="Monitor" HorizontalAlignment="Left" Margin="163,13,0,0" VerticalAlignment="Top" Click="CheckBox_Click"/>
		</Grid>
		<DataGrid IsReadOnly="True" ItemsSource="{Binding Path=Events}"/>
	</DockPanel>
</Window>